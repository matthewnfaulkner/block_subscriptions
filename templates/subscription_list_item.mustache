
<div class="border p-2 my-1">
    <h5 class="main-page-announcements-title">{{{enroltitle}}}</h5>
    <div class="row">
        <div class="col">
            <p class="p-0 text-primary">
                {{#enrolhascost}}
                    {{#str}}price, block_subscriptions {{/str}}
                    {{#enrolcost}}
                        <span class="text-accent font-weight-bold">{{enrolcost}}</span>
                    {{/enrolcost}}
                    {{^enrolcost}}
                        <span class="text-accent font-weight-bold">
                            {{#str}}nocost, block_subscriptions{{/str}}
                        </span>
                    {{/enrolcost}}
                 {{/enrolhascost}}
            </p>
            {{#enrolperiod}}
                 <p class="p-0 text-primary">
                    {{#str}}enrolperiod, block_subscriptions, {"period" :  {{#quote}}{{enrolperiod}}{{/quote}} }{{/str}}
                    <span class="text-accent font-weight-bold">{{enrolperiod}}</span>
                </p>
                {{#enrolstartdate}}
                <p class="p-0 text-primary">
                    {{#str}}startdate, block_subscriptions{{/str}}
                    <span class="text-accent font-weight-bold">
                        {{#userdate}}{{enrolstartdate}}, {{#str}} strftimedate, core_langconfig {{/str}}{{/userdate}}
                    </span>
                </p>
                {{/enrolstartdate}}
                {{#enrolenddate}}
                <p class="p-0 text-primary">
                    {{#str}}enddate, block_subscriptions{{/str}}
                    <span class="text-accent font-weight-bold">
                         {{#userdate}}{{enrolenddate}}, {{#str}} strftimedate, core_langconfig {{/str}}{{/userdate}}
                    </span>
                </p>
                {{/enrolenddate}}
            {{/enrolperiod}}
        </div>
        <div class="col">
            <p class="p-0 text-primary">
                {{#str}}membershipcategories, block_subscriptions{{/str}}
                <span class="text-accent font-weight-bold">{{formembershipcategories}}</span>
            </p>
            {{#isloggedin}}
                {{#enrolledincourse}}
                    {{#isenrolled}}
                        {{^isexpired}}
                            <a class="btn btn-success disabled">
                                {{#str}}alreadyenrolled, block_subscriptions{{/str}}
                            </a>
                            {{#unenrollink}}
                                <a class="btn btn-outline-accent action-cancel-{{subscriptionid}}"
                                    href="{{{unenrollink}}}">
                                    {{#str}}cancelsubscription, block_subscriptions{{/str}}
                                </a>
                            {{/unenrollink}}
                            {{#canselfenrol}}
                                {{#canresubscribe}}
                                    {{> block_subscriptions/enrol_buttons}}
                                {{/canresubscribe}}
                            {{/canselfenrol}}
                            
                        {{/isexpired}}
                        {{#isexpired}}
                            <a class="btn btn-danger disabled">
                                {{#str}}expired, block_subscriptions{{/str}} {{#userdate}}{{enrolenddate}}, {{#str}} strftimedate, core_langconfig {{/str}}{{/userdate}}
                            </a>
                            <a class="btn btn-info disabled">
                                {{#str}}alreadyenrolledother, block_subscriptions{{/str}}
                            </a>
                        {{/isexpired}}
                    {{/isenrolled}}
                    {{^isenrolled}}
                        <a class="btn btn-info disabled">
                            {{#str}}alreadyenrolledother, block_subscriptions{{/str}}
                        </a>
                        {{#canselfenrol}}
                            {{#canupgrade}}
                                {{> block_subscriptions/enrol_buttons}}
                            {{/canupgrade}}
                        {{/canselfenrol}}
                    {{/isenrolled}}
                {{/enrolledincourse}}
                {{^enrolledincourse}}
                    {{#isexpired}}
                                <a class="btn btn-danger disabled">
                                    {{#str}}expired, block_subscriptions{{/str}} {{#userdate}}{{enrolenddate}}, {{#str}} strftimedate, core_langconfig {{/str}}{{/userdate}}
                                </a>
                                {{#canselfenrol}}
                                    {{> block_subscriptions/enrol_buttons}}
                                {{/canselfenrol}}
                    {{/isexpired}}
                    {{^isexpired}}
                        {{> block_subscriptions/enrol_buttons}}
                    {{/isexpired}}
                {{/enrolledincourse}}
            {{/isloggedin}}
            {{^isloggedin}}
                <a class="btn btn-dark disabled">
                            {{#str}}notloggedin, block_subscriptions, {{/str}}
                        </a>
            {{/isloggedin}}
        </div>
    </div>
</div>

